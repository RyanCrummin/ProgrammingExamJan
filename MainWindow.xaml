<Window x:Class="JanuaryExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JanuaryExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" GotFocus="Window_GotFocus">
    <Grid>
        <TextBlock x:Name="tblkEvents" HorizontalAlignment="Left" Margin="125,64,0,0" TextWrapping="Wrap" Text="Events" VerticalAlignment="Top"/>
        <ListBox x:Name="listboxEvents" HorizontalAlignment="Left" Height="244" Margin="94,100,0,0" VerticalAlignment="Top" Width="271" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="listboxEvents_SelectionChanged"/>
        <ListBox x:Name="listboxTickets" HorizontalAlignment="Left" Height="244" Margin="419,100,0,0" VerticalAlignment="Top" Width="337" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="listboxTickets_SelectionChanged"/>
        <TextBox x:Name="textboxSearch" HorizontalAlignment="Left" Margin="271,62,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="110" TextChanged="TextBox_TextChanged" GotFocus="textboxSearch_GotFocus"/>
        <TextBlock x:Name="txtblkTickets" HorizontalAlignment="Left" Margin="474,67,0,0" TextWrapping="Wrap" Text="Tickets" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtblkNumberOfTickets" HorizontalAlignment="Left" Margin="458,393,0,0" TextWrapping="Wrap" Text="Number Of Tickets" VerticalAlignment="Top"/>
        <TextBox x:Name="txtboxTicketAmount" HorizontalAlignment="Left" Height="16" Margin="579,393,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" TextChanged="TextBox_TextChanged_1" GotFocus="txtboxTicketAmount_GotFocus"/>
        <Button x:Name="buttonBook" Content="Book" HorizontalAlignment="Left" Margin="741,393,0,0" VerticalAlignment="Top" Height="16" Width="30" FontSize="10" Click="buttonBook_Click"/>
    </Grid>
</Window>
