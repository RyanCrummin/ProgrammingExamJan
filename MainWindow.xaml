<Window x:Class="JanuaryExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JanuaryExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" GotFocus="Window_GotFocus">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="347*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tblkEvents" HorizontalAlignment="Left" Margin="19,64,0,0" TextWrapping="Wrap" Text="Events" VerticalAlignment="Top" Grid.Column="1"/>
        <ListBox x:Name="listboxEvents" HorizontalAlignment="Left" Height="244" Margin="94,100,0,0" VerticalAlignment="Top" Width="271" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="listboxEvents_SelectionChanged" Grid.ColumnSpan="2"/>
        <ListBox x:Name="listboxTickets" HorizontalAlignment="Left" Height="244" Margin="313,100,0,0" VerticalAlignment="Top" Width="337" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="listboxTickets_SelectionChanged" Grid.Column="1"/>
        <TextBox x:Name="textboxSearch" HorizontalAlignment="Left" Margin="165,62,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="110" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
        <TextBlock x:Name="txtblkTickets" HorizontalAlignment="Left" Margin="368,67,0,0" TextWrapping="Wrap" Text="Tickets" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock x:Name="txtblkNumberOfTickets" HorizontalAlignment="Left" Margin="352,393,0,0" TextWrapping="Wrap" Text="Number Of Tickets" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="txtboxTicketAmount" HorizontalAlignment="Left" Height="16" Margin="473,393,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" TextChanged="TextBox_TextChanged_1" Grid.Column="1"/>
        <Button x:Name="buttonBook" Content="Book" HorizontalAlignment="Left" Margin="635,393,0,0" VerticalAlignment="Top" Height="16" Width="30" FontSize="10" Grid.Column="1"/>
    </Grid>
</Window>
